
<ChatScreen>:
	BoxLayout:
		orientation: 'vertical'

		BoxLayout:
			size_hint_y: None
			height:50
			Button:
				text: "Back"
				on_press:root.backPress()

				
		BoxLayout:
			
			Button:
				background_color:(1,0,0,1)
				Scatter:
					pos: 20,0
					
					size_hint_y: None
					height: 500
					auto_bring_to_front: False
					do_rotation:False
					do_scale:False
					do_translation_x:False
					Label:
						id:mylabel
						text: "Send nudes"
						font_size:20	
						
		BoxLayout:
			size_hint_y:None
			TextInput:
				id:my_textinput
				font_size: 20
				size_hint_y: None
				height: 40
				text: 'default'
			Button:
				text: "send"
				height: 40
				size_hint_y: None
				size_hint_x: None
				on_press:root.sendPress()

